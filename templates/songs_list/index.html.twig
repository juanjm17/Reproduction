{% extends 'base.html.twig' %}

{% block title %}SongsList index{% endblock %}

{% block body %}
    <h1>SongsList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Quantity</th>
                <th>Total_duration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for songs_list in songs_lists %}
            <tr>
                <td>{{ songs_list.id }}</td>
                <td>{{ songs_list.title }}</td>
                <td>{{ songs_list.quantity }}</td>
                <td>{{ songs_list.totalDuration ? songs_list.totalDuration|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_songs_list_show', {'id': songs_list.id}) }}">show</a>
                    <a href="{{ path('app_songs_list_edit', {'id': songs_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_songs_list_new') }}">Create new</a>
{% endblock %}
